<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".FormularioActivity">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:src="@drawable/something" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:src="@drawable/reservado" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnFooterComencemos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llHeader">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:text="NOMBRE:"
            android:textSize="100sp" />

        <EditText
            android:id="@+id/etNombre"
            style="@style/EditTextRounded"
            android:layout_height="200dp"
            android:layout_marginHorizontal="80dp"
            android:textSize="90sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="80dp"
            android:text="TELÃ‰FONO:"
            android:textSize="100sp" />

        <EditText
            android:id="@+id/etTelefono"
            style="@style/EditTextRounded"
            android:layout_height="200dp"
            android:layout_marginHorizontal="80dp"
            android:textSize="90sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="80dp"
            android:text="EMAIL:"
            android:textSize="100sp" />

        <EditText
            android:id="@+id/etEmail"
            style="@style/EditTextRounded"
            android:layout_height="200dp"
            android:layout_marginHorizontal="80dp"
            android:textSize="90sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btnFooterComencemos"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="15dp"
        android:padding="5dp"
        android:src="@drawable/comencemos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>